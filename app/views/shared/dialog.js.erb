
$('#dialog').dialog("close").remove();

$("body").append("<%= escape_javascript(render(dialog)) %>");

$('#dialog').dialog({
		autoOpen: true,
                minWidth: 415,
                closeOnEscape: false,              
		modal: true
});

$("#cancelButton").button().click(function(){
	$('#dialog').dialog('close').remove();
	return false;
});

$("#submitButton").button().click(function(){
        $('#dialog > form').submit();
	$('#dialog').dialog('close').remove();
	return false;
});
