
$('#dialog').dialog("close");
$('#dialog').remove();

$("body").append("<%= escape_javascript(render('new')) %>");

$('#dialog').dialog({
		autoOpen: true,
		width: 400,
                closeOnEscape: false,              
		modal: true
});

$("#cancelButton").button().click(function(){
	$('#dialog').dialog('close');
        $('#dialog').remove();
	return false;
});

$("#submitButton").button().click(function(){
        $('form').submit();
	$('#dialog').dialog('close');
        $('#dialog').remove();
	return false;
});
