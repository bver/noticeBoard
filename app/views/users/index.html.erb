<% content_for :head do %>
  <script type="text/javascript">
     function specificInit() {
         $( '#accordion' ).accordion({ icons: true });

         $( '#addButton' ).button({
	    icons: { primary: 'ui-icon-star'}
         });

         $( '#addButton' ).button().click(function(){
            $('#dialog').dialog('open');
            return false;
         });

	  $('#dialog').dialog({
		autoOpen: false,
		width: 600,
		buttons: {
	           "Ok": function() {
                          $(this).dialog("close");
  		   },
		   "Cancel": function() {
			   $(this).dialog("close");
  	           }
		},
		modal: true
           });
                
      }
  </script>
<% end %>
<% content_for :nbheader do %>
       <h1><%=t :users%></h1>
       <span role="button" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" id="addButton"><span
           class="ui-button-icon-primary ui-icon ui-icon-star"></span><span class="ui-button-text"><%=t :add_user%></span></span>
<% end %>

 <div id="accordion"  class="ui-accordion ui-widget ui-helper-reset ui-accordion-icons" >

<% @users.each do |user| %>
 <h3><a href="#"><%= user.name %></a></h3>
 <div class="nbnote">

    <ul id="icons" class="nbiconbox">
      <li class="nbicon" title="<%= t(:edit) %>"><a href="<%= edit_user_path(user) %>"><span class="ui-icon ui-icon-pencil"></span></a></li>
        <li class="nbicon" title="<%= t(:delete) %>"><a href="<%= user_path(user) %>"  data-confirm="Are you sure?"  data-method="delete"><span class="ui-icon ui-icon-trash"></span></a></li>
    </ul>

    <%= t :user %>: <%= user.name %><br/>
    <%= t :email %>: <%= user.email %><br/>
    <span class="ui-icon ui-icon-<%= user.send_mails ? 'check' : 'close' %> nbnoteicon"></span> <%= t :send_mails %><br/>
        
 </div>
<% end %>

</div>

<%= link_to 'New User', new_user_path %>

