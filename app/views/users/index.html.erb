<% content_for :nbheader do %>
       <h1><%=t :users%></h1>
       <span role="button" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" id="leftIconButton"><span
           class="ui-button-icon-primary ui-icon ui-icon-star"></span><span class="ui-button-text"><%=t :add_user%></span></span>
<% end %>

<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Send mails</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.send_mails %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

