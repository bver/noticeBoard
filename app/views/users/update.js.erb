<%
content = render :partial => 'user', :locals => { :user => @user }
h3,div = content.split 'h3>'
h3 += 'h3>'
%>

$('#h_<%= @user.id %>').replaceWith("<%=escape_javascript h3 %>");
$('#d_<%= @user.id %>').replaceWith("<%=escape_javascript div %>");

$('#accordion').accordion("destroy").accordion({icons: true});

var act = false;
$('#accordion > h3').each(function(index) {
    if( "h_<%= @user.id %>" == $(this).attr("id") )
       act = index;
});
$('#accordion').accordion("activate", act );
