<% content_for :head do %>
  <script type="text/javascript">
     function specificInit() {
         $( '#accordion' ).accordion( "activate" , <%=  activated %>);
     }
  </script>
<% end %>
<% content_for :nbheader do %>
       <h1><%=t :boards%></h1>
       <a role="button" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only"
            id="addButton" href="<%= new_board_path :format=>'js' %>" data-remote="true"><span
           class="ui-button-icon-primary ui-icon ui-icon-star"></span><span class="ui-button-text"><%=t :add_board%></span></a>
<% end %>

 <% if @boards.empty? %>
       <p><%=t :no_board %></p>
 <% else %>
     <div id="accordion"  class="ui-accordion ui-widget ui-helper-reset ui-accordion-icons" >

    <% @boards.each do |board| %>
       <% @board = board %>
       <%= render :partial => 'board' %>
    <% end %>
<% end %>
</div>
